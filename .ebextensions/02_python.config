container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python vud-back/manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python vud-back/manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python vud-back/manage.py collectstatic --noinput"


option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "vudback.settings"
    "PYTHONPATH": "/opt/python/current/app/vudback:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: vud-back/vudback/wsgi.py
    NumProcesses: 3
    NumThreads: 20